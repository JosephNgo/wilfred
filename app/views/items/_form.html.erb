<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="row">
      <div class="large-12 columns field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="row">
      <div class="large-12 columns field">
        <%= f.label :description %><br>
        <%= f.text_area :description %>
      </div>
    </div>
    <div class="row">
      <div class="large-12 columns field">
        <%= f.label :drawing_number %><br>
        <%= f.text_field :drawing_number %>
      </div>
    </div>
    <div class="row">
      <div class="large-12 columns field">
        <%= f.label :qty %><br>
        <%= f.number_field :qty %>
      </div>
    </div>
    <div class="row">
      <div class="large-12 columns actions">
        <%= button_tag(type: 'submit' , class: "button") do %>
          Save
        <% end %>
      </div>
    </div>
  </form>

<% end %>
