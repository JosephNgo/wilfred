<h1>Listing: Sessions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Date</th>
      <th>Actions</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sessions.reorder('name').each do |session| %>
      <tr>
        <td><%= session.name %></td>
        <td><%= session.description %></td>
        <td><%= session.date %></td>
        <td><%= link_to 'Details', session %></td>
        <td><%= link_to 'Edit', edit_session_path(session) %></td>
        <td><%= link_to 'Delete', session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="row">
  <%= link_to 'New Session', new_session_path, :class => 'button' %>
</div>