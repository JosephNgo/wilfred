<%= form_for(@session) do |f| %>
  <% if @session.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@session.errors.count, "error") %> prohibited this session from being saved:</h2>

      <ul>
      <% @session.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="row">
      <div class="large-12 columns field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="row">
      <div class="large-12 columns field">
        <%= f.label :description %><br>
        <%= f.text_area :description %>
      </div>
    </div>
    <div class="row">
      <div class="large-12 columns field">
        <%= f.label :date %><br>
        <%= f.date_field :date %>
      </div>
    </div>
    <div class="row">
      <div class="large-12 columns actions">
        <%= f.submit %>
      </div>
    </div>
  </form>

<% end %>
